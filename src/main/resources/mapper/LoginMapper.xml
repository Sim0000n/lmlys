<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.area237.lmlys.dao.LoginDao">
    <resultMap id="loginResultMap" type="team.area237.lmlys.model.response.LoginResponse">
        <result column="username" jdbcType="VARCHAR" property="userName"/>
    </resultMap>
    <select id="loginByColumn" resultMap="loginResultMap">
        select username from user where ${column} = #{value}
        and
        password = #{password}
    </select>
</mapper>